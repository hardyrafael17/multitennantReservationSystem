
{
  "compilerOptions": {
    "module": "commonjs",
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "outDir": "lib",
    "sourceMap": true,
    "strict": true,
    "target": "es2017",
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "allowJs": true,
    "checkJs": false
  },
  "compileOnSave": true,
  "include": [
    "functions/src/**/*"
  ],
  "exclude": [
    "node_modules",
    "functions/lib"
  ]
}

